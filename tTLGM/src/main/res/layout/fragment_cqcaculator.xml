<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.thu.ttlgm.component.IconView
        android:id="@+id/CalcIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/btn_t_cq"
        app:corner_radius="360dip"
        app:border_width="2dip"
        app:border_color="#333333"
        app:round_background="true"
        android:scaleType="centerCrop"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/CalcContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="CQCalc.CQCalculatorFragment"
                android:weightSum="9"
                android:id="@+id/sort_layout"
                android:descendantFocusability="beforeDescendants"
                android:background="@android:color/white"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="22dp"
                    android:text="排名"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:id="@+id/sortTextView"
                    android:layout_gravity="center_horizontal" />

                <ListView
                    android:id="@+id/sortlistview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6" />

                <Button
                    android:id="@+id/removeSortButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="關閉"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="CQCalc.CQCalculatorFragment"
                android:weightSum="9"
                android:id="@+id/calcList_layout"
                android:descendantFocusability="beforeDescendants"

                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/groupText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="第一組"
                        android:background="#99D9EA"
                        android:textSize="20dp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/closeText"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:textSize="20dp"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="0dp" />
                </FrameLayout>

                <ListView
                    android:id="@+id/listview"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/sort"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="排序"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:background="@drawable/btn_o_cqnum" />

                    <TextView
                        android:id="@+id/cacl"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="計算"
                        android:textSize="20dp"
                        android:background="@drawable/btn_o_cqnum" />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/blankPlaceLayout"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:clickable="true"></LinearLayout>

        <LinearLayout
            android:id="@+id/calcButtonLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="9">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2">


                <TextView
                    android:gravity="center"
                    android:textSize="24dp"
                    android:id="@+id/button1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1"
                    android:background="@drawable/btn_o_cqnum" />

                <TextView
                    android:gravity="center"
                    android:textSize="24dp"
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2"
                    android:background="@drawable/btn_o_cqnum" />

                <TextView
                    android:gravity="center"
                    android:textSize="24dp"
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3"
                    android:background="@drawable/btn_o_cqnum" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2">

                <TextView
                    android:gravity="center"
                    android:textSize="24dp"
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="4"
                    android:background="@drawable/btn_o_cqnum" />

                <TextView
                    android:gravity="center"
                    android:textSize="24dp"
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="5"
                    android:background="@drawable/btn_o_cqnum" />

                <TextView
                    android:gravity="center"
                    android:textSize="24dp"
                    android:id="@+id/button6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="6"
                    android:background="@drawable/btn_o_cqnum" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2">

                <TextView
                    android:gravity="center"
                    android:textSize="24dp"
                    android:id="@+id/button7"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="7"
                    android:background="@drawable/btn_o_cqnum" />


                <TextView
                    android:gravity="center"
                    android:textSize="24dp"
                    android:id="@+id/button8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="8"
                    android:background="@drawable/btn_o_cqnum" />

                <TextView
                    android:gravity="center"
                    android:textSize="24dp"
                    android:id="@+id/button9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="9"
                    android:background="@drawable/btn_o_cqnum" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2">

                <TextView
                    android:gravity="center"
                    android:textSize="24dp"
                    android:id="@+id/button0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:background="@drawable/btn_o_cqnum" />

                <TextView
                    android:gravity="center"
                    android:textSize="24dp"
                    android:id="@+id/buttonDel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="刪除"
                    android:background="@drawable/btn_o_cqnum" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>