<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.thu.ttlgm.component.IconView
        android:id="@+id/TargetIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/default_icon"
        app:corner_radius="360dip"
        app:border_width="2dip"
        app:border_color="#333333"
        app:round_background="true"
        android:scaleType="centerCrop"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/RandomBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/obj_t_randombkg"
        android:scaleType="fitCenter"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/RandomArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:orientation="vertical"
        android:padding="20dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">




            <com.makeramen.RoundedImageView
                android:id="@+id/RandomIcon"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/default_icon"
                app:corner_radius="360dip"
                app:border_width="2dip"
                app:border_color="#333333"
                app:round_background="true"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/AddCoin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_t_add"
                android:layout_gravity="bottom|right"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/RefreshCoin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_t_refreshicon"
                android:layout_gravity="top|right"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/Close"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_t_closeicon"
                android:layout_gravity="top|left"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/SubCoin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/btn_t_cancel"
                android:layout_gravity="bottom|left"
                android:clickable="true"/>

            <TextView
                android:id="@+id/CoinTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$100"
                android:textSize="50dp"
                android:textColor="#fffbcc12"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LoadBar"
                android:layout_gravity="center" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/black"
                    android:text=""
                    android:id="@+id/Student_Name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/black"
                    android:text=""
                    android:id="@+id/Student_ID" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/black"
                    android:text=""
                    android:id="@+id/Student_Department" />


            </LinearLayout>
        </FrameLayout>

    </LinearLayout>



</FrameLayout>